source 'https://rubygems.org'

# Core Jekyll gem and theme dependencies
gem 'jekyll', '~> 4.2', '>= 4.2.0'
gem 'jekyll-theme-minimal', '~> 2.0'  # Ensure you use a specific stable version if needed

# SEO and utility gems
gem 'jekyll-seo-tag', '~> 2.0'  # For SEO-friendly meta tags
gem 'jekyll-sitemap', '~> 1.0'   # For sitemap generation
gem 'jekyll-paginate-v2', '~> 2.0'  # For pagination support
gem 'jekyll-feed', '~> 0.15'     # For RSS feed generation

# Optional gems for enhanced functionality
gem 'jekyll-coffeescript', '~> 1.0'  # If you plan to use CoffeeScript
gem 'jekyll-commonmark-ghpages', '~> 0.0.1'  # For better Markdown parsing
gem 'jekyll-gist', '~> 1.5'         # For embedding GitHub Gists
gem 'jekyll-github-metadata', '~> 0.7'  # For better GitHub integration
gem 'jekyll-relative-links', '~> 0.5'  # For automatically managing relative links
gem 'jekyll-optional-front-matter', '~> 0.1'  # Optional front matter support
gem 'jekyll-readme-index', '~> 0.2'  # Auto-create index pages from README
gem 'jekyll-default-layout', '~> 0.1'  # Default layout support
gem 'jekyll-titles-from-headings', '~> 0.5'  # Auto-generate titles from headings

# Development and build dependencies
group :jekyll_plugins do
  gem 'jekyll-admin', '~> 0.8'  # Provides a web-based interface to manage your site
end

# Optional: Gem for asset management (if you're using SASS, JavaScript minification, etc.)
gem 'jekyll-assets', '~> 3.1'  # Asset pipeline support, if you are using assets

# Add minifier gem for compression
gem 'jekyll-minifier', '~> 0.5'  # Minifies HTML, CSS, and JavaScript

# Use this to specify your required Ruby version
ruby '2.7.0'
